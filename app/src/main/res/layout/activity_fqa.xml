                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cancellation Policy"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                />

                            <ImageButton
                                android:id="@+id/bt_toggle_text3"
                                android:layout_width="?attr/actionBarSize"
                                android:layout_height="?attr/actionBarSize"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:srcCompat="@drawable/ic_baseline_expand_more_24" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyt_expand_text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:text="You can cancel your booking within the app. Go to 'My Bookings', select the booking you want to cancel, and follow the cancellation process. Please note that cancellation policies may vary by hotel."
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.core.widget.NestedScrollView>


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_content4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
