<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/postimage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:clickable="true"
                android:contentDescription="post image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_image_24"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="16dp"
                android:focusable="true">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/titlename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hotel Title hear"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/decribetxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Enter discription here.
Discover Serene Haven Lodge, a hidden gem nestled in tranquil forests overlooking a serene lake. Our Deluxe Lakeside Cabins offer modern comforts with private balconies and stunning views. Enjoy locally sourced cuisine at our lakeside restaurant, unwind in our rustic lodge, or explore nearby hiking trails. For reservations, visit www.serenehavenlodge.com or call +1 (555) 123-4567. Escape to Serene Haven Lodge where tranquility meets luxury."
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:id="@+id/Locationtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="?attr/textAppearanceHeadline6" />

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/btnstatechange"
                    app:cardCornerRadius="8dp"
                    app:cardMaxElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/ic_baseline_comment_24"
                            app:tint="@android:color/black" />

                    </LinearLayout>



                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


</LinearLayout>